{
	"name": "vue3-plugin-vite-template",
	"version": "1.0.0",
	"description": "Template for Vue3 plugin development",
	"main": "./dist/vue3-plugin-vite-template.umd.js",
	"module": "./dist/vue3-plugin-vite-template.es.js",
	"exports": {
		".": {
			"import": "./dist/vue3-plugin-vite-template.es.js",
			"require": "./dist/vue3-plugin-vite-template.umd.js"
		}
	},
	"scripts": {
		"prepublishOnly": "npm run build",
		"build": "rimraf dist && vite build && tsc -d --emitDeclarationOnly --outDir dist",
		"dev": "vite"
	},
	"files": [
		"dist"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/lajoskvcs/vue3-plugin-vite-template.git"
	},
	"author": "Lajos Kov√°cs <lajoskvcs@icloud.com>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/lajoskvcs/vue3-plugin-vite-template/issues"
	},
	"homepage": "https://github.com/lajoskvcs/vue3-plugin-vite-template#readme",
	"peerDependencies": {
		"vue": "^3.0.6"
	},
	"devDependencies": {
		"@types/node": "^14.14.31",
		"@vitejs/plugin-vue": "^1.1.5",
		"rimraf": "^3.0.2",
		"typescript": "^4.2.3",
		"vite": "^2.0.5"
	}
}
